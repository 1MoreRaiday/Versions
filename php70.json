{
    "homepage": "https://windows.php.net/",
    "license": {
        "identifier": "PHP-3.01",
        "url": "https://secure.php.net/license/"
    },
    "version": "7.0.31",
    "architecture": {
        "64bit": {
            "url": "https://windows.php.net/downloads/releases/php-7.0.31-Win32-VC14-x64.zip",
            "hash": "sha1:566709655868474a521ac814efde2018108a60e3"
        },
        "32bit": {
            "url": "https://windows.php.net/downloads/releases/php-7.0.31-Win32-VC14-x86.zip",
            "hash": "sha1:2f6b65f8e45f45c82abdcd8fe391616e2424abb5"
        }
    },
    "bin": [
        "php.exe",
        "php-cgi.exe"
    ],
    "persist": [
        "cli",
        [
            "php.ini-production",
            "cli\\php.ini"
        ]
    ],
    "env_set": {
        "PHP_INI_SCAN_DIR": "$dir\\cli;$dir\\cli\\conf.d;"
    },
    "post_install": [
        "#Copy PHP configuration file to expected location",
        "cp \"$dir\\php.ini-production\" \"$dir\\php.ini\"",
        "",
        "#Enable extensions to be found in installation-relative folder (the default is to search C:/php)",
        "(gc \"$dir\\php.ini\") | % { $_ -replace '; extension_dir = \"ext\"', 'extension_dir = \"ext\"' } | sc \"$dir\\php.ini\""
    ],
    "checkver": {
        "url": "https://windows.php.net/download/",
        "re": "<h3 id=\"php-7.0\".*?>.*?\\(([0-9\\.]+)\\)</h3>"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://windows.php.net/downloads/releases/php-$version-Win32-VC14-x64.zip"
            },
            "32bit": {
                "url": "https://windows.php.net/downloads/releases/php-$version-Win32-VC14-x86.zip"
            }
        },
        "hash": {
            "url": "https://windows.php.net/downloads/releases/sha1sum.txt"
        }
    },
    "suggest": {
        "vcredist": [
            "extras/vcredist2015"
        ]
    }
}
