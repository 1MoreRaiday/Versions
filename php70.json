{
    "homepage": "http://windows.php.net/",
    "version": "7.0.27",
    "license": "https://php.net/license/",
    "architecture": {
        "64bit": {
            "url": "http://windows.php.net/downloads/releases/php-7.0.27-Win32-VC14-x64.zip",
            "hash": "sha1:00a385a868479d3a6b0f76ad66aff86d2cdc9dc9"
        },
        "32bit": {
            "url": "http://windows.php.net/downloads/releases/php-7.0.27-Win32-VC14-x86.zip",
            "hash": "sha1:699e3e7b63fe1cbf07a787c42614ab266100ac4b"
        }
    },
    "bin": [
        "php.exe",
        "php-cgi.exe"
    ],
    "persist": [
        "cli",
        [
            "php.ini-production",
            "cli\\php.ini"
        ]
    ],
    "env_set": {
        "PHP_INI_SCAN_DIR": "$dir\\cli;$dir\\cli\\conf.d;"
    },
    "post_install": "
#Copy PHP configuration file to expected location
cp \"$dir\\php.ini-production\" \"$dir\\php.ini\"

#Enable extensions to be found in installation-relative folder (the default is to search C:/php)
(gc \"$dir\\php.ini\") | % { $_ -replace '; extension_dir = \"ext\"', 'extension_dir = \"ext\"' } | sc \"$dir\\php.ini\"
",
    "checkver": {
        "url": "http://windows.php.net/download/",
        "re": "<h3 id=\"php-7.0\".*?>.*?\\(([0-9\\.]+)\\)</h3>"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "http://windows.php.net/downloads/releases/php-$version-Win32-VC14-x64.zip"
            },
            "32bit": {
                "url": "http://windows.php.net/downloads/releases/php-$version-Win32-VC14-x86.zip"
            }
        },
        "hash": {
            "url": "http://windows.php.net/downloads/releases/sha1sum.txt"
        }
    },
    "suggest": {
        "vcredist": [
            "extras/vcredist2015"
        ]
    }
}
